<!-- Sign in / Register Modal -->
<div class="modal fade" id="signin-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true"><i class="icon-close"></i></span>
        </button>

        <div class="form-box">
          <div class="form-tab">
            <ul class="nav nav-pills nav-fill nav-border-anim" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" id="signin-tab" data-toggle="tab" href="#signin" role="tab" aria-controls="signin" aria-selected="true">Sign In</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="register-tab" data-toggle="tab" href="#register" role="tab" aria-controls="register" aria-selected="false">Register</a>
                </li>
            </ul>
            <div class="tab-content" id="tab-content-5">
                <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="signin-tab">
                  <%= form_for Spree.user_class.new, as: :spree_user, url: spree_login_path do |f| %>
                    <div id="password-credentials">
                      <div class="form-group">
                        <%= f.email_field :email, class: 'form-control', placeholder: Spree.t(:email), value: params.dig(:spree_user, :email) %>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :password, class: 'form-control', placeholder: Spree.t(:password) %>
                      </div>
                    </div>

                    <div class="form-footer">
                      <%= f.submit Spree.t(:login), class: 'btn btn-outline-primary-2' %>

                      <% if Spree::Frontend::Config[:remember_me_enabled] %>
                        <div class="custom-checkbox">
                          <%= f.check_box :remember_me, class: 'custom-control-input' %>
                          <%= f.label :remember_me, Spree.t(:remember_me), class: 'custom-control-label' %>
                        </div>
                      <% end %>

                      <% if spree.respond_to?(:recover_password_path) %>
                        <%= link_to Spree.t(:forgot_password), spree.recover_password_path, class: 'forgot-link' %>
                      <% end %>
                    </div><!-- End .form-footer -->
                  <% end %>
                </div><!-- .End .tab-pane -->
                <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
                  <div id="new-customer" data-hook="login">
                    <%= form_for Spree.user_class.new, as: :spree_user, url: spree.registration_path do |f| %>
                      <div class="form-group">
                        <%= f.email_field :email, class: 'form-control', placeholder: Spree.t(:email) %>
                      </div>

                      <div class="form-group">
                        <%= f.password_field :password, class: 'form-control', placeholder: Spree.t(:password) %>
                      </div>

                      <div class="form-group">
                        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: Spree.t(:confirm_password) %>
                      </div>

                      <div class="form-footer">
                        <%= f.submit Spree.t(:sign_up), class: 'btn btn-outline-primary-2' %>
                      </div><!-- End .form-footer -->
                    <% end %>
                  </div>
                </div><!-- .End .tab-pane -->
            </div><!-- End .tab-content -->
          </div><!-- End .form-tab -->
        </div><!-- End .form-box -->
      </div><!-- End .modal-body -->
    </div><!-- End .modal-content -->
  </div><!-- End .modal-dialog -->
</div><!-- End .modal -->
